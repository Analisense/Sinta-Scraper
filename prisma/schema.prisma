// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Affiliation {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  numericId         Int?    @unique
  codePT            String?
  name              String?
  nameAbbrev        String?
  imgUrl            String?
  origin            String?
  departmentUrl     String?
  totalDepartment   Int?
  authorCount       String?
  sintaScore3Yr     String?
  sintaScoreOverall String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("affiliations")
}

model Author {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  sintaId             String?  @unique
  name                String?
  profileUrl          String?
  profileImgUrl       String?
  universityName      String?
  universityUrl       String?
  codePT              String?
  prodiName           String?
  prodiUrl            String?
  sintaScore3Yr       String?
  sintaScoreOverall   String?
  subject             Json[]
  scopusHIndex        String?
  wosHIndex           String?
  googleScholarHIndex String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("authors")
}

model AffiliationAuthors {
  id                  String      @id @default(auto()) @map("_id") @db.ObjectId
  sintaId             String?     @unique
  name                String?
  profileUrl          String?
  profileImgUrl       String?
  university          University?
  prodiName           String?
  prodiUrl            String?
  scopusHIndex        String?
  googleScholarHIndex String?
  sintaScore3Yr       String?
  sintaScore          String?
  affilScore3Yr       String?
  affilScore          String?

  @@map("affiliation_authors")
}

type University {
  name                 String?
  abbrevName           String?
  pddiktiCode          String?
  imgUrl               String?
  location             String?
  numericIdAffiliation Int?
}
